@model MPSIGestionSoftSony.Models.hdd

@{
    ViewBag.Title = "Support Soft Sony";
}

<link href="https://fonts.googleapis.com/css?family=Playball" rel="stylesheet">

<h2 class="align-center" style="font-family: 'Playball', cursive;">Ajouter HDD</h2>

@if (TempData["success"] != null)
{
    <script>
        swal("Good job!", "HDD Ajouter!", "success");
    </script>

}

<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>

<div class="card">
    <div class="input-group"></div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">


                <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group form-float">
                        @*<div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">

                            </div>*@
                        <div class="col-md-10 col-lg-4">
                            <b>Numéro de serie</b>
                            <div class="input-group form-line">

                                @Html.EditorFor(model => model.NumSerie, new { htmlAttributes = new { @class = "form-control", placeholder = "Numuro Serie", required = "true" } })
                                @Html.ValidationMessageFor(model => model.NumSerie, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="">
                        @*<div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">

                            </div>*@
                        <div class="col-md-10 col-lg-4">
                            <b>Catégorie</b>
                            <div class="input-group form-line">
                                <select class="form-control show-tick" name="Categorie" id="Categorie" required>
                                    <option value="">-- Please select --</option>
                                    <option value="BD">BD</option>
                                    <option value="Mx">M_x</option>
                                    <option value="Mx1">M_x1</option>
                                    <option value="Mx2">M_x2</option>
                                    <option value="Mx3">M_x3</option>
                                    <option value="Ox">O_x</option>
                                    <option value="Ox1">O_x1</option>
                                    <option value="Ox2">O_x2</option>
                                    <option value="Ox3">O_x3</option>
                                    <option value="V">Vide</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.Categorie, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">

                        </div>
                        <div class="col-md-10 col-lg-4">
                            <b>Soft</b>
                            <div class="input-group form-line">
                                @Html.EditorFor(model => model.Soft, new { htmlAttributes = new { @class = "form-control", placeholder = "Soft", required = "true" } })
                                @Html.ValidationMessageFor(model => model.Soft, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="form-group" style="display:none">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">

                        </div>
                        <div class="col-md-10 col-lg-0">
                            <b>Etat</b>
                            <div class="input-group form-line">
                                <select class="form-control show-tick" name="Etat" id="Etat">
                                    <option value="">-- Please select --</option>
                                    <option value="En Service" selected>En Service</option>
                                    <option value="En Panne">En Panne</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.Etat, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="input-group"></div>

                    <div class="">
                        <div class="col-md-10 col-lg-4">
                            <b>Choix Poste</b>
                            <div class="input-group form-line">
                                @Html.DropDownList("Poste_Id", null, "<---Select Poste--->", htmlAttributes: new { @class = "form-control", required = "true" })
                                @Html.ValidationMessageFor(model => model.Poste_Id, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @*<div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">

                            </div>*@
                        <div class="col-md-10 col-lg-4">
                            <b>Description</b>
                            <div class="input-group form-line">
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "description..." })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @*<div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">

                            </div>*@
                        <div class="col-md-10 col-lg-4">
                            <b>Date Achat</b>
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    <i class="material-icons">date_range</i>
                                </span>
                                <div class="form-line">
                                    <input type="date" class="form-control date" name="Dt_achat" id="Dt_achat" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="input-group"></div>
                    <div class="form-group">
                        @*<div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">

                            </div>*@
                        <div class="col-md-4 col-lg-4">
                            <b>Date Sortie</b>
                            <div class="input-group ">
                                <span class="input-group-addon open-datetimepicker">
                                    <i class="material-icons">date_range</i>
                                </span>
                                <div class="form-line">
                                    <input type="date" class="form-control date" name="Dt_sortie" id="Dt_sortie" onblur="ValidateDate()">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class=" col-md-12 align-center">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>                    <div class="input-group"></div>

                </div>
            </div>
        </div>
    }

</div>

@if (ViewBag.existdeja != null)
{

    <script>
        swal("Oops", "Numéro de Serie exist deja!", "error");
    </script>

}


@section Scripts {
    <script src="~/template/js/js dropdownlist/jquery1.9.1.js"></script>
    <script src="~/template/js/js dropdownlist/jquery-ui-1.11.0.js"></script>
    <script>
        function ValidateDate() {
            var dateAchat = $('#Dt_achat').val();
            var dateSortie = $('#Dt_sortie').val();
            if ((new Date(dateSortie).getTime() - new Date(dateAchat).getTime()) < 0) {
                alert('Date Sortie doit etre supperieur a date achat');
                $('#Dt_achat').val("");
                $('#Dt_sortie').val("");
                return false;
            } else {
                return true;
            }
        }
    </script>

}
