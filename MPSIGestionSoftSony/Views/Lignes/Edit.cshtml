@model MPSIGestionSoftSony.Models.ligne

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="align-center" style="font-family: 'Playball', cursive;">Modifier Ligne</h2>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="card container" style="width:500px">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <div class="form-group">
                    <div class="input-group"></div>
                    <div class="input-group"></div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-5">Nom Ligne</label>
                        <div class="col-md-7 ">
                            <div class="form-line">
                                @Html.EditorFor(model => model.Ligne1, new { htmlAttributes = new { @class = "form-control"} })
                                @Html.ValidationMessageFor(model => model.Ligne1, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="input-group"></div>
                    <div class="input-group"></div>
                    <div class="form-group">
                        <label class="control-label col-md-5">Nom Atelier</label>
                        <div class="col-md-7 ">
                            <div class="">
                                @Html.DropDownList("IdAtelier", null, "Select Atelier", htmlAttributes: new { @class = "btn btn-default waves-effect dropdown-toggle" })
                                @Html.ValidationMessageFor(model => model.IdAtelier, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="input-group"></div>
                    <div class="input-group"></div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 align-center">
                            <input type="submit" value="Update" class="btn btn-success" />
                        </div>
                    </div>
                    <div class="input-group"></div>
                </div>
            </div>
        </div>
    }
</div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div>
    <a class="btn bg-pink waves-effect m-b-15 " href="@Url.Action("Index", "Lignes")">Back to List</a>
</div>
@section Scripts {
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script>


}