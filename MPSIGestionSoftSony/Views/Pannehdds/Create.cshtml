@model MPSIGestionSoftSony.Models.pannehdd

@{
    ViewBag.Title = "Create";
}
<link href="https://fonts.googleapis.com/css?family=Playball" rel="stylesheet">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<h2 class="align-center" style="font-family: 'Playball', cursive;">Ajouter Panne HDD</h2>

<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
@if (ViewBag.existdeja != null)
{

    <script>
        swal("Oops", "Panne HDD exist deja!", "error");
    </script>

}
<div class="card container" style="width:500px">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">


                <div class="form-group ">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-5">HDD Num Serie </label>
                        <div class="col-md-7">
                            @Html.DropDownList("Hdd_NumSerie", null, "Choisir HDD", htmlAttributes: new { @class = "btn btn-default waves-effect dropdown-toggle", required = true })
                            @Html.ValidationMessageFor(model => model.Hdd_NumSerie, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="input-group"></div>

                    <div class="input-group"></div>
                    <div class="form-group">
                        <label class="control-label col-md-5">Nom Panne </label>
                        <div class="col-md-7 ">
                            @Html.DropDownList("Panne_Id", null, "Choisir panne", htmlAttributes: new { @class = "btn btn-default waves-effect dropdown-toggle", required = true })
                            @Html.ValidationMessageFor(model => model.Panne_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="input-group"></div>
                    <div class="input-group"></div>

                    <div class="form-group">
                        <label class="control-label col-md-5">Date Panne HDD</label>
                        <div class="col-md-7 col-lg-7">

                            <div class="input-group ">
                                <span class="input-group-addon">
                                    <i class="material-icons">date_range</i>
                                </span>
                                <div class="form-line">
                                    <input type="date" class="form-control date" placeholder="Ex: 30/07/2016" name="DatePH" id="DatePH" onblur="ValidateDate()" required>
                                    <span class="text-danger" data-valmsg-for="Dt_sortie" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="input-group"></div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 align-center">
                            <input type="submit" value="Create" class="btn btn-success waves-effect" />
                        </div>
                    </div>
                    <div class="input-group"></div>

                </div>
            </div>
        </div>
    }
</div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>

<div>
    <a class="btn bg-pink waves-effect m-b-15" href="@Url.Action("Index", "Pannehdds")">Back to list</a>
</div>
@section scripts{
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
}