@model MPSIGestionSoftSony.Models.pannehdd

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://fonts.googleapis.com/css?family=Playball" rel="stylesheet">
<h2 class="align-center" style="font-family: 'Playball', cursive;">Modifier Panne HDD</h2>


<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="card container" style="width:500px">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">


                <div class="form-group ">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">

                        @Html.LabelFor(model => model.Hdd_NumSerie, "Hdd_NumSerie", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.DropDownList("Hdd_NumSerie", null, htmlAttributes: new { @class = "btn btn-default waves-effect dropdown-toggle", required = true })
                            @Html.ValidationMessageFor(model => model.Hdd_NumSerie, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="input-group"></div>
                    <div class="input-group"></div>
                    <div class="form-group">
                        <label class = "control-label col-md-5" >Nom panne</label>
                        <div class="col-md-7">
                            @Html.DropDownList("Panne_Id", null, htmlAttributes: new { @class = "btn btn-default waves-effect dropdown-toggle", required = true })
                            @Html.ValidationMessageFor(model => model.Panne_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="input-group"></div>
                    <div class="input-group"></div>

                    <div class="form-group">
                        <div class="control-label col-md-5"><label>Date Panne HDD</label></div>
                        <div class="col-md-7 col-lg-7">

                            <div class="input-group ">
                                <span class="input-group-addon">
                                    <i class="material-icons">date_range</i>
                                </span>
                                <div class="form-line">
                                    @Html.EditorFor(model => model.DatePH, new { htmlAttributes = new { @class = "form-control", required = true, @type = "date", @Value = Model.DatePH.ToString("yyyy-MM-dd") } })
                                    @Html.ValidationMessageFor(model => model.DatePH, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="input-group"></div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 align-center">
                            <input type="submit" value="Update" class="btn btn-success waves-effect" />
                        </div>
                    </div>
                    <div class="input-group"></div>
                </div>
            </div>
        </div>
    }
</div>
<div class="input-group"></div>
<div class="input-group"></div>
<div class="input-group"></div>
<div>
    <a class="btn bg-pink waves-effect m-b-15" href="@Url.Action("Index", "Pannehdds")">Back to list</a>
</div>
@section scripts{
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
}